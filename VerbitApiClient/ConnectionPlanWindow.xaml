<Window x:Class="VerbitApiClient.ConnectionPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verbit API - Update Connection Plan" Height="550" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Update Connection Plan Template" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="POST /api/v1/session/{order_id}/connection_plan" FontSize="14" Foreground="Gray"/>
            <TextBlock Text="Realtime API: https://realtime.verbit.co" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Input Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Authentication -->
                <GroupBox Header="Authentication" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Bearer Token *" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Obtain from your Verbit account credentials" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="BearerTokenBox" Height="30" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Required Parameters -->
                <GroupBox Header="Required Parameters" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Order ID *" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="The order identifier for the session" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox x:Name="OrderIdBox" Height="30" Margin="0,0,0,15"/>

                        <TextBlock Text="Connection Plan ID *" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="The identifier for the connection plan template to apply" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox x:Name="ConnectionPlanIdBox" Height="30" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Information Panel -->
                <Border Background="#F0F8FF" BorderBrush="#B0D4F1" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ℹ️ How to use this feature:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                            1. This endpoint changes the connection plan template for an active session
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                            2. Use the Get Session Info endpoint to retrieve available connection plans
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                            3. Enter the Order ID and the desired Connection Plan ID
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            4. The response will show the updated connection plan details
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,15">
            <Button x:Name="ClearButton" Content="Clear Form" Width="100" Height="35" Margin="0,0,10,0" Click="ClearButton_Click"/>
            <Button x:Name="SubmitButton" Content="Update Plan" Width="120" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="SubmitButton_Click"/>
        </StackPanel>

        <!-- Response Area -->
        <GroupBox Grid.Row="3" Header="Response">
            <Grid>
                <TextBox x:Name="ResponseBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Padding="10"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
